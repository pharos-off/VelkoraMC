{
  "name": "caftlauncher",
  "version": "3.8.0",
  "description": "Launcher Minecraft",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "copy-assets": "node scripts/copy-assets.js",
    "build": "npm run copy-assets && electron-builder",
    "build:win": "npm run copy-assets && electron-builder --win",
    "build:mac": "npm run copy-assets && electron-builder --mac",
    "build:linux": "npm run copy-assets && electron-builder --linux"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "electron"
  ],
  "author": "Pharos",
  "license": "CLv1",
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "lucide": "^0.562.0",
    "minecraft-launcher-core": "^3.18.2",
    "minecraft-protocol": "^1.26.5",
    "node-fetch": "^2.7.0",
    "sharp": "^0.33.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  },

  "protocols": [
    {
      "name": "Minecraft Protocol",
      "schemes": ["minecraft"]
    }
  ],

  "build": {
    "appId": "com.craftlauncher.app",
    "productName": "CraftLauncher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
